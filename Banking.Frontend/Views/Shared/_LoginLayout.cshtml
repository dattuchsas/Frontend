@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor
@{
    ISession session = httpContextAccessor.HttpContext?.Session ?? null!;
    string background = session.GetString("background") ?? string.Empty;
    string header = session.GetString("header") ?? string.Empty;
    string textColor = session.GetString("textColor") ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FinXPro - @ViewData["Title"]</title>
    <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/css/login.css" />
</head>
<body class="@background">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-md navbar-dark @header">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="#" asp-action="#">
                    <img src="~/images/maharaja_logo.svg" class="hd-img-maharaja" alt="Our Bank">
                    <strong class="hd-text-maharaja">THE MAHARAJA CO.OP URBAN BANK LTD.</strong>
                </a>
            </div>
        </nav>
    </header>
    <main>
        <div class="container-fluid">
            <div class="row p-3">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="bd-footer py-3 @header">
        <div class="container text-center">
            <span class="@textColor">&copy; @DateTime.Now.Year - FinXPro</span>
        </div>
    </footer>
    <script asp-append-version="true" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script asp-append-version="true" src="~/js/login.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
