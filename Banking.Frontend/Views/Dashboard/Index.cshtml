@model Banking.Models.DashboardModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12">
    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
</div>

@if (Model.AssignedModules.Keys.Count > 0)
{
    @foreach (var item in Model.AssignedModules.Keys)
    {
        <div class="col-2 d-grid gap-2 p-2">
            <a href="#" class="btn btn-dark text-white">
                <img src="~/images/bank.svg" class="img-fluid pb-2" alt="Bank">
                <br />
@*                 <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-bank2 pb-2" viewBox="0 0 16 16">
                    <path d="M8.277.084a.5.5 0 0 0-.554 0l-7.5 5A.5.5 0 0 0 .5 6h1.875v7H1.5a.5.5 0 0 0 0 1h13a.5.5 0 1 0 0-1h-.875V6H15.5a.5.5 0 0 0 .277-.916zM12.375 6v7h-1.25V6zm-2.5 0v7h-1.25V6zm-2.5 0v7h-1.25V6zm-2.5 0v7h-1.25V6zM8 4a1 1 0 1 1 0-2 1 1 0 0 1 0 2M.5 15a.5.5 0 0 0 0 1h15a.5.5 0 1 0 0-1z" />
                    <br />
                </svg> *@
                @Model.AssignedModules[item]
            </a>
        </div>
    }
}
